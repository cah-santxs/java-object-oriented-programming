			System.out.println("Enter the" + i + "ยบ semester grades: ");
			student.schoolGrade = sc.nextDouble();
			student.schoolGrade = sc.nextDouble();
			student.schoolGrade = sc.nextDouble();
			System.out.println("Enter the" + i + "ยบ semester grades: ");
			student.schoolGrade = sc.nextDouble();
			student.schoolGrade = sc.nextDouble();
			student.schoolGrade = sc.nextDouble();
			System.out.println("Enter the" + i + "ยบ semester grades: ");
			student.schoolGrade = sc.nextDouble();
			student.schoolGrade = sc.nextDouble();
			student.schoolGrade = sc.nextDouble();
		}
		
		
		sc.close();

	}

}
